@import 'bootstrap';

#vertical-centering {
  vertical-align: middle;
  margin: auto;
}

footer {
  text-align: right;
}

h1 {
  font-size: 14.0vw;
  text-align: center;
}

.hidded {
  display: none;
}

.container {
  padding-top: 0px;
  padding-bottom:0px;
  padding-right:5px;
  padding-left:5px;
}

body {
  background-image: url(<%= image_path 'destination_20.jpg' %>);
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.vertical {
  vertical-align: middle;
}

#home_tab {
  background: rgba(0,0,0,0.5);
  padding-left: 20px;
  padding-right: 20px;
  padding-top: 5px;
  padding-bottom:5px;
  vertical-align: middle;
  border-radius: 30px;
  vertical-align:middle;
}

#invert {
  color: rgba(255,255,255,0.7);
}

#invert_soft {
  color: rgba(160,160,160,0.8);
}

.logo {
  margin: auto;
  display: block;
  height: 60px;
  width: 60px;
}

.soundcloud {
  background: url(<%= image_path 'soundcloud-6-60.ico' %>);
  &:hover {
    background: url(<%= image_path 'soundcloud-6-60_h.ico' %>);
  }
}

.facebook {
  background: url(<%= image_path 'facebook-3-60.ico' %>);
  color: rgb(0,0,0);
  &:hover {
    background: url(<%= image_path 'facebook-3-60_h.ico' %>);
  }
}

#authors {
  color: rgb(255,255,255);
  background-color: rgba(0,0,0,0.6);
}

