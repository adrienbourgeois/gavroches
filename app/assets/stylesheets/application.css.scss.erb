@import 'bootstrap';

.hidded {
  display: none;
}

.container {
  padding-top: 100px;
  padding-bottom:100px;
  padding-right:20px;
  padding-left:20px;
}

body {
  background-image: url(<%= image_path 'destination_20.jpg' %>);
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.vertical {
  vertical-align: middle;
}

#home_tab {
  background: rgba(0,0,0,0.7);
  padding: 30px;
  vertical-align: middle;
  border-radius: 30px;
  vertical-align:middle;
}

#invert {
  color: rgb(255,255,255);
}

#invert_soft {
  color: rgb(124,124,124);
}

.logo {
  margin: auto;
  display: block;
  height: 120px;
  width: 120px;
}

.soundcloud {
  background: url(<%= image_path 'soundcloud-6-120.ico' %>);
  &:hover {
    background: url(<%= image_path 'soundcloud-6-120_h.ico' %>);
  }
}

.facebook {
  background: url(<%= image_path 'facebook-3-120.ico' %>);
  color: rgb(0,0,0);
  &:hover {
    background: url(<%= image_path 'facebook-3-120_h.ico' %>);
  }
}

